{
  "type": "object",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "required": [
    "context",
    "message"
  ],
  "properties": {
    "context": {
      "type": "object",
      "required": [
        "domain",
        "action",
        "country",
        "city",
        "core_version",
        "bap_id",
        "bap_uri",
        "transaction_id",
        "message_id",
        "timestamp",
        "ttl"
      ],
      "properties": {
        "ttl": {
          "type": "string",
          "const": "PT30S",
          "$comment": "filler:system"
        },
        "city": {
          "type": "string",
          "$comment": "filler:consumer"
        },
        "action": {
          "type": "string",
          "const": "search",
          "$comment": "filler:system"
        },
        "bap_id": {
          "type": "string",
          "$comment": "filler:consumer"
        },
        "domain": {
          "type": "string",
          "const": "ONDC:RET13",
          "oneOf": [
            {
              "const": "ONDC:RET10",
              "title": "Grocery"
            },
            {
              "const": "ONDC:RET12",
              "title": "Fashion"
            },
            {
              "const": "ONDC:RET13",
              "title": "BPC"
            }
          ],
          "$comment": "filler:user"
        },
        "bap_uri": {
          "type": "string",
          "$comment": "filler:consumer"
        },
        "country": {
          "type": "string",
          "$comment": "filler:consumer"
        },
        "timestamp": {
          "type": "string",
          "$comment": "filler:consumer"
        },
        "message_id": {
          "type": "string",
          "$comment": "filler:consumer"
        },
        "core_version": {
          "type": "string",
          "const": "1.2.0",
          "$comment": "filler:system"
        },
        "transaction_id": {
          "type": "string",
          "$comment": "filler:consumer"
        }
      }
    },
    "message": {
      "type": "object",
      "required": [
        "intent"
      ],
      "properties": {
        "intent": {
          "type": "object",
          "required": [
            "item",
            "payment"
          ],
          "properties": {
            "item": {
              "type": "object",
              "required": [
                "descriptor"
              ],
              "properties": {
                "descriptor": {
                  "type": "object",
                  "required": [
                    "name"
                  ],
                  "properties": {
                    "name": {
                      "type": "string",
                      "const": "123",
                      "$comment": "filler:user"
                    }
                  }
                }
              }
            },
            "payment": {
              "type": "object",
              "required": [
                "@ondc/org/buyer_app_finder_fee_type",
                "@ondc/org/buyer_app_finder_fee_amount"
              ],
              "properties": {
                "@ondc/org/buyer_app_finder_fee_type": {
                  "type": "string",
                  "const": "percent",
                  "$comment": "filler:system"
                },
                "@ondc/org/buyer_app_finder_fee_amount": {
                  "type": "string",
                  "const": "5",
                  "$comment": "filler:system"
                }
              }
            }
          }
        }
      }
    }
  }
}